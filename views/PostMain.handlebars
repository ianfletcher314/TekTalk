<!-- this is the template for Single Post with submitable comment section bellow  -->

<div class="container">
    {{!-- ---------------------------------POST BEGINS HERE-------------------------------------- --}}



    <div class="row">
        <div class="col s12 card-panel grey center containerHeight">
            <div id="playerContainer" class="col s7">
                <iframe id="player"
                    src="https://open.spotify.com/embed/artist/391cQTgUsbV6iSWdvDdCbp?si=gP1kagBLRIuL_Emxt4Nr6Q"
                    width="500" height="200" frameborder="0" allowtransparency="true" allow="encrypted-media"></iframe>
            </div>

            <div id="descriptionContainer" class="col s4 offset-s1 grey lighten-1">

                <div id="description" class="card-panel">
                    This song could be used as a drum sample.
                    The repeat drops could be pitched down to create more of a bass effect
                    <p>
                        Sample Time : 1:38
                    </p>
                </div>
            </div>

            <div id="commentContainer" class="col s6 offset-s1 grey lighten-1">
                {{#each Comments as |comment|}}

                {{>singlecomment}}

                {{/each}}
                {{!-- <p>
                    {{User.username}}
                </p> --}}
            </div>
            <div class="col s4 offset-s1" id="inputContainer">

                <form class="card-panel white ">
                        <label class="active" for="commentText"></label>
                        <textarea id="commentText" name="commentText" cols="25" rows="6" placeholder="Any comments on this sound?"></textarea>
                        <a id="newCmtSubmitBtn" class="waves-effect waves-teal btn-flat submitButton">
                            SUBMIT
                        </a>
                </form>
            </div>

        </div>

    </div>
</div>


<script src='/subComment.js'></script>
